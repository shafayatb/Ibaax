<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ibaax.com.ibaax.MyPostedPropertyDetailActivity2"
    tools:showIn="@layout/activity_my_posted_property_detail_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_mypropertydetail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brooklyn, New York, United States"
                    android:textSize="22sp"
                    android:layout_marginBottom="1dp"
                    android:typeface="sans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_location_grey" />

                    <TextView
                        android:id="@+id/lbl_mypropertydetail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brooklyn, New York, United States"

                        android:textSize="12sp"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lbl_mypropertyDetailtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Single Apartment"

                        android:textSize="16sp"
                        android:typeface="sans" />

                    <ImageView
                        android:id="@+id/img_list_pro_type"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginStart="5dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_map_icon_forsale" />

                    <TextView
                        android:id="@+id/lbl_mypropertytdetail_PropertyType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FOR SALE"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lbl_mypropertydetail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20,000,000"
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:text="Property Overview"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#60aaff"
            android:textStyle="bold"
            android:typeface="sans" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:background="#cccccc" />

        <UI.ExpandableHeightGridView
            android:id="@+id/gridview_overview_mypropertydetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:isScrollContainer="false"
            android:numColumns="3"
            android:paddingLeft="10dp"
            android:stretchMode="columnWidth" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="#cccccc" />

        <TextView

            android:id="@+id/lblMyPropertyDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:padding="10dp"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#60aaff"
            android:textStyle="bold"
            android:typeface="sans" />

        <WebView
            android:id="@+id/web_mypropertydetail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="6dp">

        </WebView>

        <View
            android:id="@+id/myview_desc"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="#cccccc" />

        <LinearLayout
            android:id="@+id/lnrMyPropertySpecification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Specification"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#60aaff"
                android:textStyle="bold"
                android:typeface="sans" />
            <!--Indoor-->
            <LinearLayout
                android:id="@+id/lnrMyPropertyDetail_indoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#E9ECF3"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="Indoor"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="sans" />


                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_Indoor_mypropertydetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="2dp"
                    android:isScrollContainer="false"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp" />
            </LinearLayout>
            <!--Outdoor-->
            <LinearLayout
                android:id="@+id/lnrMyPropertyDetail_outdoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#E9ECF3"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="Outdoor"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="sans" />


                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_outdoor_mypropertydetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="2dp"

                    android:isScrollContainer="false"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp" />
            </LinearLayout>

            <!--Furnishing-->

            <LinearLayout
                android:id="@+id/lnrMyPropertyDetail_furnishing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#E9ECF3"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="Furnishing"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="sans" />


                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_Furnishing_mypropertydetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="2dp"

                    android:isScrollContainer="false"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp" />
            </LinearLayout>

            <!--Parking-->
            <LinearLayout
                android:id="@+id/lnrMyPropertyDetail_parking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#E9ECF3"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="Parking"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="sans" />


                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_Parking_mypropertydetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="2dp"

                    android:isScrollContainer="false"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp" />
            </LinearLayout>
            <!--Parking-->
            <LinearLayout
                android:id="@+id/lnrMyPropertyDetail_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#E9ECF3"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="View"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="sans" />


                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_View_mypropertydetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="2dp"
                    android:isScrollContainer="false"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp" />
            </LinearLayout>

            <!--Parking-->
            <LinearLayout
                android:id="@+id/lnrMyPropertyDetail_localamn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#E9ECF3"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="Local Amenities"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:typeface="sans" />


                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_Locanamn_mypropertydetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="2dp"

                    android:isScrollContainer="false"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mapview_mypropertydetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Location"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#60aaff"
                android:textStyle="bold"
                android:typeface="sans" />

            <fragment
                android:id="@+id/mymap"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>