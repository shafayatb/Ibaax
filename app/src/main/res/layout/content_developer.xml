<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:layout_marginBottom="80dp"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DeveloperProfileActivity"
    tools:showIn="@layout/activity_developer_brokerage_profile">

    <LinearLayout
        android:id="@+id/lnr_content_developer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnr_developerprofile_specialities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Specialities"
                    android:textColor="#60aaff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_developerprofile_specialites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="#fff"
                    android:clickable="false"
                    android:horizontalSpacing="0dp"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="0dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_developerprofile_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Profile Summery "
                    android:textColor="#60aaff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/docview_developer_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ext:documentView_antialias="true"
                    ext:documentView_cacheConfig="auto_quality"
                    ext:documentView_textColor="#88000000"
                    ext:documentView_insetPadding="10dp"
                    ext:documentView_lineHeightMultiplier="1.0"
                    ext:documentView_textAlignment="justified"
                    ext:documentView_textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_developerprofile_areas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Service Area"
                    android:textColor="#60aaff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_developerprofile_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="#fff"
                    android:clickable="false"
                    android:horizontalSpacing="0dp"
                    android:numColumns="1"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="0dp" />

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/lnr_developerprofile_coninfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Company Information"
                    android:textColor="#60aaff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_developerprofile_coninfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="#e3e3e3"
                    android:clickable="false"
                    android:isScrollContainer="false"
                    android:numColumns="1"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_developerprofile_activelisting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Active Listing"
                    android:textColor="#60aaff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_developer_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:horizontalSpacing="2dp"
                    android:isScrollContainer="false"
                    android:numColumns="1"
                    android:stretchMode="columnWidth" />

                <TextView
                    android:id="@+id/lbl_developerprofile_moreactivelisting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="View More Active Listing"
                    android:textColor="#60aaff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_developerprofile_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Location"
                    android:textColor="#60aaff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <fragment
                    android:id="@+id/map_developerprofile"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_developerprofile_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Video"
                    android:textColor="#60aaff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <RelativeLayout
                    android:id="@+id/rel_developerprofile_yoitube"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="8dp">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/img_developer_youtube"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/playbtn" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_developerprofile_reviews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Rating &amp; Reviews"
                    android:textColor="#60aaff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <UI.ExpandableHeightGridView
                    android:id="@+id/gridview_developerprofile_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:horizontalSpacing="2dp"
                    android:isScrollContainer="false"
                    android:numColumns="1"
                    android:stretchMode="columnWidth" />

                <TextView
                    android:id="@+id/lbl_developerprofile_morereviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="View More Reviews"
                    android:textColor="#60aaff"
                    android:typeface="sans" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
