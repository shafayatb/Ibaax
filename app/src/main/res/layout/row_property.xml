<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_property_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@null"
        android:src="@drawable/property_no_photo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/lnr_background_gradiant">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:id="@+id/img_list_pro_type"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:padding="2dp"
                android:src="@drawable/ic_map_icon_forsale" />

            <TextView
                android:id="@+id/lbl_rowproperty_PropertyTransactionTypeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="FOR SALE"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_rowproperty_favorite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/hover"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_heart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:id="@+id/lbl_rowproperty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="VILLA"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/lbl_row_property_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area, City, Zip Code, State"
                android:textColor="#fff"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_rowproperty_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="VILLA"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:typeface="sans" />


                <TextView
                    android:id="@+id/lbl_rpw_property_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 0000"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lnr_featureprop_bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beds:"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/lbl_row_property_bed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="3dp"
                        android:text="4"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_featureprop_bath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baths:"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/lbl_row_property_bath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="3dp"
                        android:text="4"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:typeface="sans" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_featureprop_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Area:"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/lbl_row_property_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginStart="3dp"
                        android:text="400 sqft"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:typeface="sans" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>


