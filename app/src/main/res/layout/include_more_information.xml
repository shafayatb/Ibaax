<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_propertydetail_userimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:background="#d3d3d3"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/txt_propertydetail_postedby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@+id/img_propertydetail_userimage"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Coral Reef Pro....."
        android:textColor="#418BCA"
        android:textSize="16sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/txt_propertydetail_usertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_propertydetail_postedby"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/img_propertydetail_userimage"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Real Estate Brokage"
        android:textSize="12sp"
        android:typeface="sans" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_propertydetail_usertype"
        android:layout_marginLeft="-3dp"
        android:layout_toEndOf="@+id/img_propertydetail_userimage"
        android:layout_toRightOf="@+id/img_propertydetail_userimage"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_propertydetail_phn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_phone_blue" />

        <TextView
            android:id="@+id/txt_propertydetail_userphn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="+8801719429826"
            android:textColor="#418BCA"
            android:textSize="13sp"
            android:typeface="sans" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_propertydetail_useraddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout6"
        android:layout_toEndOf="@+id/img_propertydetail_userimage"
        android:layout_toRightOf="@+id/img_propertydetail_userimage"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="House # 00,Park....."
        android:textSize="12sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/txt_propertydetail_listing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_propertydetail_useraddress"
        android:layout_toEndOf="@+id/img_propertydetail_userimage"
        android:layout_toRightOf="@+id/img_propertydetail_userimage"
        android:text="Listing: 0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="sans"
        android:visibility="gone" />

</RelativeLayout>