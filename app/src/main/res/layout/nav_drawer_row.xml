<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="3dp"
        android:paddingLeft="18dp"
        android:paddingTop="3dp"
        android:id="@+id/rel_two_item">

        <TextView
            android:id="@+id/nav_drawer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img_drawericon"
            android:layout_toRightOf="@+id/img_drawericon"
            android:paddingLeft="5dp"
            android:paddingTop="11dp"
            android:textColor="#428BCA"
            android:text="PlaceHolder"
            android:typeface="sans"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_drawericon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_drawer_home" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_two_item"
        android:id="@+id/rel_one_item"
        android:clickable="false"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/nav_drawer_title_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textColor="#428BCA"
            android:text="PlaceHolder"
            android:typeface="sans"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d3d3d3"/>

</RelativeLayout>