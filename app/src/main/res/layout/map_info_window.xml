<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnr_map_info_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_map_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"
            android:src="@drawable/property_no_photo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lnr_background_gradiant" />

        <LinearLayout
            android:id="@+id/lnr_next_prev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btn_left"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:padding="5dp"
                android:src="@drawable/left_arrow_white" />

            <TextView
                android:id="@+id/lbl_totalnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 of 100"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/btn_right"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:padding="5dp"
                android:src="@drawable/right_arrow_white" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_map_favorite"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:src="@drawable/ic_heart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:padding="2dp">


            <TextView
                android:id="@+id/lbl_map_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Property Name"
                android:textColor="#fff"
                android:textSize="19sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/lbl_map_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Address"
                android:textColor="#fff"
                android:textSize="12sp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_map_property_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Property Type"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/lbl_map_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BDT 5000000"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_map_bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="Bed: 4"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/lbl_map_bath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="Bath: 4"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/lbl_map_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="Area: 400 sqft"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:typeface="sans" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:id="@+id/img_map_pro_type"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:padding="2dp"
                android:src="@drawable/ic_map_icon_forsale" />

            <TextView
                android:id="@+id/lbl_map_pro_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="FOR SALE"
                android:textColor="#fff"
                android:textSize="12sp"
                android:typeface="sans" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>