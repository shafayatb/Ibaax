<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#EADADA" />
            <gradient android:angle="-90" android:endColor="#FF690B" android:startColor="#F98A57" />
            <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp"></padding>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <gradient android:angle="-90" android:endColor="#418BCA" android:startColor="#418BCA" />
            <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp"></padding>
        </shape>
    </item>

</selector>