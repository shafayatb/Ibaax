<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">


            <stroke android:width="1dip" android:color="#ccc" />

            <gradient android:angle="-90" android:endColor="#FF690B" android:startColor="#F98A57" />
            <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">


            <stroke android:width="1dp" android:color="#ccc" />

            <gradient android:angle="-90" android:endColor="#f4f4f4" android:startColor="#fff" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>

</selector>